<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userdetailseditActivity"
    android:background="@drawable/background2">


    <RelativeLayout
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Board Me"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/homepageusericon" />




    </RelativeLayout>


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff" />

    <EditText

        android:id="@+id/edit_emai"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="75dp"

        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignLeft="@+id/edit_emai"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="38dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_emai"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="75dp"

        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_emai"
        android:layout_alignStart="@+id/edit_password"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="36dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_register"
        android:background="@drawable/button_rectangle_blue"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="75dp"
        android:textColor="#ffffff"
        android:text="Update" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="114dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16dp" />


</RelativeLayout>